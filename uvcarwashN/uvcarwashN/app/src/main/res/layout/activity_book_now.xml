<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookNow"
    android:background="@drawable/btn_back8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="56dp"
        android:paddingRight="24dp">
        <TextView
            android:id="@+id/textGrid"
            android:text="Book Now"
            android:textSize="34sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20dp"
            android:id="@+id/sertype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:paddingBottom="30dp"
            android:textColorHint="#000"
            android:textColorHighlight="#fff"
            android:outlineAmbientShadowColor="#fff"
            android:outlineSpotShadowColor="#fff"
            android:textColorLink="#fff"
            android:shadowColor="#fff"
            android:textColor="#000"
            android:background="@drawable/btn_back4"
            android:padding="20dp"
            android:inputType="text" />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/carnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter car number(MH08-2273)"
            android:textSize="20dp"
            android:paddingBottom="30dp"
            android:textColorHighlight="#fff"
            android:outlineAmbientShadowColor="#fff"
            android:outlineSpotShadowColor="#fff"
            android:textColorLink="#fff"
            android:shadowColor="#fff"
            android:textColorHint="#000"
            android:textColor="#000"
            android:background="@drawable/btn_back4"
            android:padding="20dp"
            android:inputType="text" />



        <Button
            android:id="@+id/EnglishButton"
            android:layout_marginTop="200dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_back7"
            android:text="Book"

            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>